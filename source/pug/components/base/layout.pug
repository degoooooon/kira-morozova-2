doctype html

include ../components

block variables

html(lang="ru")
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content="Кира Морозова - психолог, психотерапевт. Индивидуальная терапия, семейная терапия, консультации по вопросам отношений и личностного роста в Кисловодске и онлайн.")
    //- Ключевые слова (не критично для SEO, но можно добавить)
    meta(name="keywords", content="психолог, психотерапевт, Кисловодск, онлайн консультации, семейная терапия")
    meta(name="author", content="Кира Морозова")
    //- генерируйте favicon тут - https://realfavicongenerator.net/
    //- в подключение фавикон манифеста обязательно добавьте строчки crossorigin="use-credentials"
    //- используйте только для шрифта находящегося на первом экране
    //- link(rel="preload", href="fonts/placeholder.woff2", as="font", crossorigin="anonymous")
    //- При необходимости вы можете добавить разметку Open graf. - const Open graf = true
    if (openGraf)
      //- Обязательно измените содержание контента на тот что необходим!
      //- Введите заголовок
      meta(property="og:title", content="Кира Морозова — психолог и психотерапевт в Кисловодске и онлайн")
      //- Введите необходимый тип
      meta(property="og:type", content="article")
      //- Введите адрес сайта
      meta(property="og:url", content="https://kira-morozova-2.ru/img/og-image.jpg")
      //- Введите описание
      meta(property="og:description", content="Индивидуальная и семейная терапия в Кисловодске и онлайн. Консультации по вопросам отношений и личностного роста.")

    link(rel="stylesheet", href="css/style.min.css")

  body
    .wrapper(class=wrapperMods)
      .overlay
      if (hasHeader)
        +header(headerMods, currentUrl)

      block main

      if (hasFooter)
        +footer(footerMods)

    block modals

    script(src="js/vendor.min.js")
    script(src="js/main.min.js")
